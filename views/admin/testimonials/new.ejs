    <div id="createform" class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Create a new testimonial</h1>
            </div>
            <div class="form">
                <form action="/admin/testimonials" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="clientName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control bigbox " type="text" name="image"
                            placeholder="Image URL"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control " type="text" name="testimonial"
                            placeholder="Enter the testimonial"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="importance"
                            placeholder="Enter importance( either 1 or 2)">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control  " type="text" name="whatWeDo"
                            placeholder="Enter the client's description"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>

                </form>
                <a href="/admin">Go Back</a>
            </div>
        </div>
    </div>

